<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Hilti imports" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Hilti imports</h1>
    <%= link_to "New hilti import", new_hilti_import_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="hilti_imports" class="min-w-full">
    <% @hilti_imports.each do |hilti_import| %>
      <%= render hilti_import %>
      <p>
        <%= link_to "Show this hilti import", hilti_import, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>

<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @hilti_import %>


    <div>
      <h1>Projects</h1>
      <ul>
        <% @hilti_import.hilti_projects.each do |project| %>
          <li><%= link_to project.name, project, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %></li>
        <% end %>
      </ul>
    </div>

    <%= link_to "Edit this hilti import", edit_hilti_import_path(@hilti_import), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to hilti imports", hilti_imports_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this hilti import", @hilti_import, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
